default_platform(:ios)

platform :ios do
  desc 'build ipa'
  lane :beta do
    automatic_code_signing(
      targets: 'SpoolDays',
      code_sign_identity: ENV['CODE_SIGN_IDENTITY'],
      profile_name: ENV['CODE_SIGN_PROFILE_NAME'],
      use_automatic_signing: false
    )
    automatic_code_signing(
      targets: 'SpoolDaysTodayExtension',
      code_sign_identity: ENV['CODE_SIGN_IDENTITY'],
      profile_name: ENV['CODE_SIGN_PROFILE_NAME'] + '.SpoolDaysTodayExtension',
      use_automatic_signing: false
    )
    create_keychain(
      name: ENV["MATCH_KEYCHAIN_NAME"],
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      timeout: 1800
    )
    match(
      type: 'adhoc',
      keychain_name: ENV["MATCH_KEYCHAIN_NAME"],
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      readonly: true
    )
    gym(
      configuration: "Release",
      scheme: "SpoolDays",
      export_method: "ad-hoc",
      output_directory: "./build/ipa/",
      output_name: "SpoolDays.ipa",
      include_bitcode: false,
      export_options: {
        compileBitcode: false,
        uploadBitcode: false
      }
    )
    automatic_code_signing(
      targets: 'SpoolDays',
      code_sign_identity: 'iPhone Developer',
      profile_name: '',
      team_id: '',
      use_automatic_signing: true
    )
    automatic_code_signing(
      targets: 'SpoolDaysTodayExtension',
      code_sign_identity: 'iPhone Developer',
      profile_name: '',
      team_id: '',
      use_automatic_signing: true
    )
  end

  desc 'publish to deploygate'
  lane :publish_to_deploygate do
    beta
    deploygate(
      api_token: ENV['DEPLOYGATE_API_KEY'],
      user: ENV['DEPLOYGATE_USER'],
      message: "Build #{lane_context[SharedValues::BUILD_NUMBER]}"
    )
  end

  desc 'archive for simulator'
  lane :archive_for_simulator do
    xcodebuild(
      scheme: "SpoolDays",
      workspace: "SpoolDays.xcworkspace",
      configuration: "Debug",
      sdk: "iphonesimulator",
      derivedDataPath: "build"
    )
  end
end
